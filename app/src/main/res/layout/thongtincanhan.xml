<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="155dp"
        android:layout_height="203dp"
        android:layout_gravity="center"
        android:background="@drawable/mee"
        android:scaleType="center" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewHoTen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên:" />

            <EditText
                android:id="@+id/editTextHoTen"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Nhập tên" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewNamSinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Năm sinh:" />

            <EditText
                android:id="@+id/editTextNamSinh"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Nhập năm sinh" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewNoiO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nơi ở:" />

            <EditText
                android:id="@+id/editTextNoiO"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Nhập nơi ở" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewGioiTinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính:" />

            <EditText
                android:id="@+id/editTextGioiTinh"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Nhập giới tính" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSuaThongTin"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#2567a3"
            android:text="Sửa thông tin" />

        <Button
            android:id="@+id/buttonXacNhan"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#2567a3"
            android:text="Xác nhận" />
    </LinearLayout>

</LinearLayout>
